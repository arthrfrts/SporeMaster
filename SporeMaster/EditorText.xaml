<UserControl x:Class="SporeMaster.EditorText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ICSharpDevelop="clr-namespace:ICSharpCode.TextEditor;assembly=ICSharpCode.TextEditor"
    xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
    xmlns:local="clr-namespace:SporeMaster"
    Height="300" Width="300">
    <Grid>
        <wfi:WindowsFormsHost x:Name="EditorHost">
            <ICSharpDevelop:TextEditorControl x:Name="Editor">
            </ICSharpDevelop:TextEditorControl>
        </wfi:WindowsFormsHost>
    </Grid>
</UserControl>
